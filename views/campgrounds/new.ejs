<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center">Create a new Camp  ground?</h1> 

		<div class="newfrmClass">
		<form class="ui form" action="/campgrounds" method="POST">
		<div class="form-group">
			<label>Name of campground</label>
		<input class="form-control" name="name" type="text" placeholder="name"></div>
		<div class="form-group">
			<label>Image URL or image link</label>
		<input class="form-control" name="image" type="text" placeholder="image url">
		</div>
		<div class="form-group">
			<label>Price of the camp</label>
		<input class="form-control" name="price" type="number" placeholder="price" min="0.01" step="0.01">
		</div>
		<div class="form-group">
			<label>Description of campgrounds</label>
		<textarea class="form-control" name="description" type="text" placeholder="description"></textarea>
		</div>
		<button class="ui orange basic button fluid ui button">Submit</button>
		</form>
		<p></p>
		<i class="fa fa-hand-o-left" aria-hidden="true"><a href="/campgrounds" class="btn btn-secondary gBack">Go Back to grounds</a></i>
		</div>
	</div>
</div>
<% include ../partials/footer %>