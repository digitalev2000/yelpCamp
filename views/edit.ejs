<% include partials/header %>
<div class="container">
	<div class="row">
		<h1 style="text-align: center">Edit Your <%= campground.name%> Post?</h1> 
		<div class="newfrmClass">
		<form class="ui form" action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
		<div class="form-group">
			<label>Name of campground</label>
		<input class="form-control" name="campgrounds[name]" type="text" value="<%= campground.name%>"></div>
		<div class="form-group">
			<label>Image URL or image link</label>
		<input class="form-control" name="campgrounds[image]" type="text" value="<%= campground.image%>">
		</div>
		<div class="form-group">
			<label>Price of the camp</label>
		<input class="form-control" name="campgrounds[price]" type="number" value="<%= campground.price%>" min="0.01" step="0.01">
		</div>
		<div class="form-group">
			<label>Description of campgrounds</label>
		<textarea class="form-control" name="campgrounds[description]" type="text"><%= campground.description%></textarea>
		</div>
		<button class="ui orange basic button fluid ui button">Submit</button>
		</form>
		<p></p>
		<i class="fa fa-hand-o-left" aria-hidden="true"><a href="/campgrounds" class="btn btn-secondary gBack">Go Back to grounds</a></i>
		</div>
	</div>
</div>
<% include partials/footer %>